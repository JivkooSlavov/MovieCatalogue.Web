@using MovieCatalogue.Web.ViewModels.Movie
@model MoviesListViewModel

<h1 class="text-center mb-4">Movies List</h1>

<form asp-action="Index" asp-controller="Search" method="get" class="form-inline mb-3">
    <div class="form-group">
        <input type="text" name="query" class="form-control mr-2" placeholder="Search for a movie..." />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Movie</a>
</p>

<div class="row">
    @if (Model.Movies != null && Model.Movies.Any())
    {
        @foreach (var movie in Model.Movies)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@movie.PosterUrl" alt="@movie.Title Poster" class="card-img-top movie-poster" />
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Genre</p>
                        <p class="card-text">Released: @movie.ReleaseDate</p>
                        <p class="card-text">Rating: @movie.Rating.ToString("F1") / 5,0</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info btn-sm">Details</a>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            var loggedInUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value?.ToUpper().Trim();
                            var movieCreatorId = movie.CreatedByUserId.ToString().ToUpper().Trim();
                            @if (string.Equals(loggedInUserId, movieCreatorId, StringComparison.Ordinal))
                            {
                                <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Delete</a>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <p>No movies found.</p>
        </div>
    }
</div>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>

@section Styles {
    <style>
        .movie-poster {
            object-fit: cover;
            height: 350px;
            width: 100%;
        }

        .card {
            border: none;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .card-body {
            padding: 15px;
        }

        .card-footer {
            padding: 10px;
            text-align: center;
        }

        .pagination .page-item.active .page-link {
            background-color: #0056b3;
            border-color: #004085;
        }

        .pagination .page-link {
            color: #0056b3;
        }

            .pagination .page-link:hover {
                color: #004085;
            }
    </style>
}
