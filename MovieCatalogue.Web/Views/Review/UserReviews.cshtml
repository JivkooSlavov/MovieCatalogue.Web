@using MovieCatalogue.Web.ViewModels.Review
@model UserReviewsListViewModel

@{
    ViewData["Title"] = "My Reviews";
}

<h1>My Reviews</h1>

@if (Model.Reviews == null || !Model.Reviews.Any())
{
    <p>You haven't written any reviews yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Review</th>
                <th>Last Modified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-controller="Movie" asp-route-id="@review.MovieId">
                            @review.MovieTitle
                        </a>
                    </td>
                    <td>@review.Content</td>
                    <td>
                        @if (review.UpdatedAt.HasValue)
                        {
                            <span>Updated at: @review.UpdatedAt.Value.ToString("f")</span>
                        }
                        else
                        {
                            <span>Created at: @review.CreatedAt.ToString("f")</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="UserReviews" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="UserReviews" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="UserReviews" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}
