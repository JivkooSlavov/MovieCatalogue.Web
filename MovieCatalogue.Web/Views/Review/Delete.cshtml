@using MovieCatalogue.Web.ViewModels.Review;
@model ReviewDeleteViewModel

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container">
    <h1>Delete Review</h1>

    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this review?</strong>
    </div>

    <div class="mb-3">
        <p><strong>Movie:</strong> @Model.MovieTitle</p>
        <p><strong>Review Content:</strong> @Model.Content</p>
        <p><small><strong>Posted On:</strong> @Model.CreatedAt.ToString("f")</small></p>
    </div>

    <form asp-action="DeleteConfirm" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="MovieId" />
        <input type="hidden" asp-for="MovieTitle" />
        <input type="hidden" asp-for="Content" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="CreatedByUserId" />

        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Details" asp-controller="Movie" asp-route-id="@Model.MovieId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
