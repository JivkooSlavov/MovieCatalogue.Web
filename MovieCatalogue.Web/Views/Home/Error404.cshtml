@{
    ViewData["Title"] = "Page Not Found";
}

<div class="error-page">
    <h1>404 - Page Not Found</h1>
    <p>Sorry, we couldn't find the page you were looking for. This may be due to a broken link or a mistyped URL.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go back to Home</a>
</div>

@section Styles {
    <style>
        .error-page {
            text-align: center;
            margin-top: 100px;
        }

            .error-page h1 {
                font-size: 3rem;
                color: #ff6347;
            }

            .error-page p {
                font-size: 1.25rem;
                color: #555;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #0056b3;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #003366;
            }
    </style>
}
