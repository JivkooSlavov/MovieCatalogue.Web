@using MovieCatalogue.Web.ViewModels.Favorite
@model UserFavoritesListViewModel

<h1>My Favorite Movies</h1>

<table class="table">
    <thead>
        <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>Director</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var favorite in Model.Favorites)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(favorite.PosterUrl))
                    {
                        <img src="@favorite.PosterUrl" alt="Poster" class="img-thumbnail" style="max-height: 200px; max-width: 150px;" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/200x300" alt="No Poster" class="img-thumbnail" />
                    }
                </td>
                <td>@favorite.MovieTitle</td>
                <td>@favorite.DirectorName</td>
                <td>@favorite.Genre</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-controller="Movie" asp-route-id="@favorite.MovieId" class="btn btn-info custom-btn">
                            Details
                        </a>
                        <a asp-action="ConfirmRemove" asp-route-movieId="@favorite.MovieId" class="btn btn-danger custom-btn">
                            Remove
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>

<a asp-action="Index" asp-controller="Movie" class="btn btn-secondary mt-3">
    Back to All Movies
</a>
