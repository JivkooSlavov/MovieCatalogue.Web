@model MovieCatalogue.Web.ViewModels.Review.ReviewDeleteViewModel

<h1>Delete Review</h1>
<p>Are you sure you want to delete this review?</p>

<div class="card">
    <div class="card-body">
        <p><strong>Movie:</strong> @Model.MovieTitle</p>
        <p><strong>Review Content:</strong></p>
        <blockquote class="blockquote">
            <p>@Model.Content</p>
            <footer class="blockquote-footer">Posted on @Model.CreatedAt.ToString("f")</footer>
        </blockquote>
    </div>
</div>

<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="MovieId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
