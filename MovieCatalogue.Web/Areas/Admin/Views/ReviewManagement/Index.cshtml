@using MovieCatalogue.Web.ViewModels.Review
@model ReviewsListViewModel

<h1 class="text-center">All Reviews</h1>

@if (!Model.Reviews.Any())
{
    <p class="text-center">No reviews available.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Reviewer</th>
                <th>Review Content</th>
                <th>Movie</th>
                <th>Posted/Updated On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>@review.UserName</td>
                    <td>@review.Content</td>
                    <td>
                        <a asp-action="Details" asp-controller="Movie" asp-route-id="@review.MovieId" asp-area="">
                            @review.MovieTitle
                        </a>
                    </td>

                    <td>
                        @if (review.UpdatedAt.HasValue)
                        {
                            <span class="text-muted">Updated On:</span> @review.UpdatedAt.Value.ToString("g")
                        }
                        else
                        {
                            <span class="text-muted">Posted On:</span> @review.CreatedAt.ToString("g")
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}
